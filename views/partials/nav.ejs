<% let l; if (language == 'en') { l = 0; } else { l = 1; } %>

<nav>
    <div class="headeritem" id="pbLogo">
        <a href="/<%=language%>">
            <img src="/images/global/PatternBased_Logo_FB3640.svg" alt="PatternBased">
        </a>
    </div>
    <div class="headeritem" id="menuicon">
        <img src="/images/global/Menu_Icon.svg">
    </div>
    <div class="headeritem" id="nav">
        <div class="headeritem" id="closeicon">
          <img src="/images/global/Close_Icon.svg">
        </div>
        <div class="dropdownNav">
          <button class="dropbtnNav">
            <a class="navMusic" href="/<%=language%>/music">Music</a></button>
          <div class="dropContentNav">
            <a class="navMusic" href="/<%=language%>/music"><%= pageData.global.nav.music[l] %></a>
            <a class="dim" href="http://albums.patternbased.com/" target="_blank"><%= pageData.global.nav.album[l] %></a>
            <a class="dim" href="http://catalog.patternbased.com/" target="_blank"><%= pageData.global.nav.catalog[l] %></a>
          </div>
        </div>
        <!-- <a class="navArt navItem" href="">Art</a> -->
        <div class="dropdownNav">
          <button class="dropbtnNav">
            <a class="navArt" href="/<%=language%>/art">Art</a>
          </button>
          <div class="dropContentNav">
            <a class="navArt" href="/<%=language%>/art" class="dim"><%= pageData.global.nav.art[l] %></a>
            <a class="dim" id="navMultimedia" href="/<%=language%>/multimedia"><%= pageData.global.nav.multimedia[l] %></a class="dim">
            <a class="dim" id="navApps" href="/<%=language%>/apps" class="dim"><%= pageData.global.nav.pbApps[l] %></a>
            <a class="dim" id="navApps" href="/<%=language%>/dataviz" class="dim"><%= pageData.global.nav.dataviz[l] %></a>
          </div>
        </div>
        <div class="dropdownNav">
          <button class="dropbtnNav"><a class="navAbout" href="/<%=language%>/about">About</a></button>
          <div class="dropContentNav">
            <a class="navAbout" href="/<%=language%>/about"><%= pageData.global.nav.aboutPB[l] %></a>
            <a id="navArtists" class="dim" href="/<%=language%>/artists"><%= pageData.global.nav.artists[l] %></a class="dim">
            <a id="navTools" class="dim" href="/<%=language%>/tools"><%= pageData.global.nav.tools[l] %></a class="dim">
          </div>
        </div>
          <a id="navMerch" class="navItem" href="/<%=language%>/merch">Merch</a>
          <a id="navContact" class="navItem" href="/<%=language%>/contact">Contact</a>
      </div>
      <div class="headeritem language">
          <a id="EngLink" href="">
            <% if (language == 'en') { %>
                <img id="English" src="/images/global/English-SL.svg" alt="English">
            <% } else { %>
              <img id="English" src="/images/global/English.svg" alt="English">
            <% } %> 
          </a>
          <a id="JpnLink" href="">
            <% if (language == 'en') { %>
              <img id="Japanese" src="/images/global/Japanese.svg" alt="Japanese">
            <% } else { %>
              <img id="Japanese" src="/images/global/Japanese-SL.svg" alt="Japanese">
            <% } %> 
          </a>
      </div>
</nav>
<script>
  // Switching btw Languages on the curret location
  let ogUrl = location.href; 
  let en = ogUrl.includes('/en');
  let currentlang = en ? ogUrl.split('/en') : ogUrl.split('/jp');
  // let len = "https://patternbased.com/jp";
  // console.log(ogUrl, currentlang[0], currentlang[1], len.length );
  // if( ogUrl.length == 27 ) {
  // }
      $('#EngLink').attr('href', currentlang[0] + '/en' + currentlang[1]);
      $('#JpnLink').attr('href', currentlang[0] + '/jp' + currentlang[1]);

  $('#menuicon').on( "click", function() {
    $('#nav').css({'right':'-130px', 'transition-duration':'300ms'});
  });

  $('#closeicon').on( "click", function() {
    $('#nav').css({'right':'calc(-100vw - 150px)', 'transition-duration':'300ms'});
  });
</script>